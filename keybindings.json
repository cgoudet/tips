// Place your key bindings in this file to override the defaults
[
    // Toggle between terminal and editor focus
    {
        "key": "ctrl+tab",
        "command": "workbench.action.terminal.focus"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+e",
        "command": "cursorLineEnd"
    },
    {
        "key": "ctrl+a",
        "command": "cursorLineStart"
    },
    {
        "key": "ctrl+v",
        "command": "emacs.action.clipboardPasteAction",
    },
    {
        "key": "ctrl+y",
        "command": "-emacs.action.clipboardPasteAction"
    },
    {
        "key": "ctrl+x",
        "command": "emacs.action.clipboardCutAction",
        "when": "inRegionMode"
    },
    {
        "key": "ctrl+w",
        "command": "-emacs.action.clipboardCutAction"
    },
    {
        "key": "ctrl+c",
        "command": "emacs.action.clipboardCopyAction",
        "when": "inRegionMode"
    },
    {
        "key": "alt+w",
        "command": "-emacs.action.clipboardCopyAction",
    },
    {
        "key": "escape",
        "command": "emacs.exitRegionMode",
        "when": "inRegionMode"
    },
    {
        "key": "ctrl+g",
        "command": "-emacs.exitRegionMode",
        "when": "inRegionMode"
    },
    {
        "key": "tab",
        "command": "emacs-tab.reindentCurrentLine",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+f",
        "command": "-cursorRight",
        "when": "editorTextFocus && !inRegionMode"
    },
    {
        "key": "ctrl+f",
        "command": "-cursorRightSelect",
        "when": "editorTextFocus && inRegionMode"
    }
]